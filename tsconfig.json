{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["DOM", "ES2018"],
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "preserveConstEnums": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": [
    "old",
    "dist",
    "node_modules",
    "demo.js",
    "img",
    "webpack.config.js",
    "ava.config.js"
  ]
}
