{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["DOM", "ES2018"],
    "declaration": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
}
