{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["DOM", "ES2018"],
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "preserveConstEnums": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./old",
    "./dist",
    "./node_modules",
    "demo.js",
    "./types",
    "./img",
    "./webpack.config.js",
    "./ava.config.js"
  ]
}
